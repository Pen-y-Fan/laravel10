{
    "name": "pen-y-fan/laravel10",
    "type": "project",
    "description": "Laravel v10 experiments.",
    "keywords": ["project", "laravel"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^10.0",
        "laravel/sanctum": "^3.2",
        "laravel/tinker": "^2.8",
        "ext-pdo": "*"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.8",
        "barryvdh/laravel-ide-helper": "^2.13",
        "captainhook/captainhook": "^5.16",
        "fakerphp/faker": "^1.9.1",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^7.0",
        "nunomaduro/larastan": "^2.5",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^10.0",
        "rector/rector": "^0.15.24",
        "spatie/laravel-ignition": "^2.0",
        "symplify/easy-coding-standard": "^11.3",
        "symplify/phpstan-extensions": "^11.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "check-cs": "ecs --ansi",
        "fix-cs": "ecs --fix --ansi",
        "ide": "@php artisan ide-helper:models -W",
        "lint": "parallel-lint --exclude .git --exclude node_modules --exclude storage --exclude vendor .",
        "phpstan": "phpstan analyse -c phpstan.neon --error-format symplify --ansi",
        "rector": "rector --ansi",
        "rector-dr": "rector --dry-run --ansi",
        "tests": "phpunit --testdox"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
